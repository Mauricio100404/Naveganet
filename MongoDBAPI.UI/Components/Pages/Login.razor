@page "/login"
@inject NavigationManager NavigationManager
@inject UserService UserService

<style>
    .login-container {
        background-color: #4B0082; /* Morado */
        color: white;
        padding: 30px;
        max-width: 400px;
        margin: auto;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    .login-header {
        text-align: center;
        color: #FFFFFF; /* Blanco */
        margin-bottom: 20px;
        font-size: 24px;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #FFFFFF; /* Blanco */
    }
    .form-control {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        margin-top: 5px;
    }
    .form-control:focus {
        outline: none;
        box-shadow: 0 0 5px #4B0082; /* Morado */
    }
    .btn-primary {
        background-color: #4B0082; /* Morado */
        border: none;
        color: white;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
        background-color: #9400D3; /* Morado más claro */
    }
    .alert-danger {
        background-color: #FF6347; /* Rojo tomate */
        color: white;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>
<h1 class="text-center">NAVEGANET</h1>
<div class="login-container">
    <h3 class="login-header">Inicio de Sesión</h3>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
            <div class="alert alert-danger">@errorMessage</div>
    }

    <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Nombre de Usuario:</label>
            <InputText class="form-control" id="username" @bind-Value="loginModel.Username"/>
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <InputText class="form-control" id="password" @bind-Value="loginModel.Password" type="password" />
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
    </EditForm>
</div>

@code {
    private LoginModel loginModel = new LoginModel();
    private string errorMessage;

    private void HandleLogin()
    {
        UserService.Login(loginModel.Username, loginModel.Password);
        if (UserService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/");
        }
        else
        {
            errorMessage = "Nombre de usuario o contraseña incorrectos. Inténtalo de nuevo.";
        }
    }

    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }
}
